  inactive_opacity = 1.0
  blur {
    enabled = true
    size = 9
    passes = 0
    new_optimizations = yes
    xray = false
    contrast = 1
    brightness = 1
    vibrancy = 0.1696
  }
  shadow_ignore_window = true
  shadow_range = 30
  shadow_render_power = 4
  col.shadow = rgba(00000.75)
}

